{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",              // ESM output
    "moduleResolution": "Bundler",   // works best with Vite/Sanity
    "jsx": "react-jsx",
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["sanity.config.ts", "schemas"]
}